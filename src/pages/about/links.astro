---
import IconButton from "../../components/IconButton.astro";
import AboutLayout from "../../layouts/AboutLayout.astro";
import { Icon } from "astro-icon/components";
---

<AboutLayout title="Links" color="text-success-500">
  <Icon name="mdi:notebook" slot="icon" />
  <h2 class="my-10 font-mono text-3xl font-bold">SNS</h2>
  <div class="flex space-x-2">
    <IconButton url="https://github.com/moriyoshi-kasuga">
      <Icon name="mdi:github" slot="icon" />
      Github
    </IconButton>
    <IconButton url="https://twitter.com/MoriyoshiKasuga">
      <Icon name="mdi:twitter" slot="icon" />
      Twitter
    </IconButton>
  </div>
  <h2 class="my-10 font-mono text-3xl font-bold">Site</h2>
  <div class="flex space-x-2">
    <IconButton url="https://github.com/moriyoshi-kasuga/portfolio">
      <Icon name="mdi:source-branch" slot="icon" />
      Repository
    </IconButton>
  </div>
</AboutLayout>
