---
import { Icon } from 'astro-icon/components';
import IconButton from '../components/IconButton.astro';
import Layout from '../layouts/Layout.astro';

interface Props {
  backLink?: string;
  title?: string;
  description?: string;
}

const { backLink, title, description } = Astro.props;
---

<Layout title={title || 'Page not found'}>
  <div class="min-h-all container mx-auto flex items-center px-6 py-12">
    <div class="mx-auto flex max-w-sm flex-col items-center text-center">
      <p
        class="rounded-full bg-primary-50 p-3 text-3xl font-medium text-primary-500"
      >
        <Icon name="mdi:warning-decagram-outline" />
      </p>
      <h1 class="mt-3 text-2xl font-semibold text-gray-800 md:text-3xl">
        {title || 'Page not found'}
      </h1>
      <p class="my-4 text-gray-500">
        {description || 'お探しのページは存在しません。'}
      </p>
      <IconButton url={backLink || '/'} self class="">
        <Icon name="mdi:arrow-left-thin" slot="icon" />
        Go back
      </IconButton>
    </div>
  </div>
</Layout>
